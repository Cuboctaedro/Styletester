menu-horizontal(align = left, margin = 16)
    & ul
        text-align: align
        list-style: none
    & li
        display: inline-block
        text-align: align
    & li a
        text-align: align
        if align = left
            margin:0 (margin * 1px) 0 0
            margin:0 pxtorem(margin) 0 0
        else
            if align = right
                margin:0 0 0 (margin * 1px)
                margin:0 0 0 pxtorem(margin)
        else
            margin:0 (margin * 1px) 0 (margin * 1px)
            margin:0 pxtorem(margin) 0 pxtorem(margin)

button(height = 32, padding = 16, background = $md-grey)
    display: inline-block
    text-transform: uppercase
    text-align: center
    text-decoration: none
    color: $white
    background-color: background
    font-size: 14px
    font-size: pxtorem(14)
    line-height: (height / 14)
    padding: 0 (padding * 1px) 0 (padding * 1px)
    padding: 0 pxtorem(padding) 0 pxtorem(padding)
    border: 0
    border-radius: 2
    -webkit-transition: 0.3s
    -moz-transition: 0.3s
    -o-transition: 0.3s
    -ms-transition: 0.3s
    transition: 0.3s
